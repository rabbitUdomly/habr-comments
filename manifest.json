{
  "manifest_version": 3,
  "name": "Habr comment sort",
  "description": "Sorts comments on Habr.com",
  "version": "1.0.0",
  "icons": {"128": "icon_128.png"},
  "action": {
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [ "https://habr.com/*" ],
      "css": ["hab_comments.css"],
      "js": [ "app.js" ]
    }
  ],
  "permissions": ["activeTab"]
}